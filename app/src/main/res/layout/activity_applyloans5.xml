<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_small">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/coloraccept2"
                android:textSize="50sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:text="Loans For you 24/7"
                android:textColor="@color/coloraccept2"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:text="On average, how much do you earn in Ksh. per month?"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="28sp"
                ads:fontFamily="@font/josen" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ksh."
                    android:textColor="@color/coloraccept2"
                    android:textSize="24sp"
                    ads:fontFamily="@font/josen" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="272dp"
                    android:layout_height="39dp"
                    android:background="@drawable/curve_bg_input"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="@color/edit_text" />

            </TableRow>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingBottom="10dp"
                android:text="Please describe your main source of income"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="28sp"
                ads:fontFamily="@font/josen" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="121dp">

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="365dp"
                    android:layout_height="99dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/curve_bg_input"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/edit_text" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:paddingTop="15dp">

                <Button
                    android:id="@+id/button"
                    android:layout_width="152dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/btn_bg"
                    android:onClick="back"
                    android:text="Back"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="193dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/btn_bg"
                    android:onClick="next"
                    android:text="Next"
                    android:textColor="@android:color/background_light" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="58dp">

                </TableRow>

            </TableRow>
            <com.tapdaq.sdk.TMBannerAdView
                android:id="@+id/adBanner"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
