<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_small"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_small"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/coloraccept2"
                android:textSize="40sp"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:text="Loans For you 24/7"
                android:textColor="@color/coloraccept2"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:fontFamily="@font/josen"
                android:gravity="bottom|center|center_horizontal|top|center_vertical"
                android:paddingTop="2dp"
                android:text="@string/get_loan"
                android:textColor="@color/coloraccept2"
                android:textSize="25dp"
                android:textStyle="bold"
                ads:fontFamily="@font/josen" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:fontFamily="@font/josen"
                android:gravity="center"
                android:paddingTop="6dp"
                android:text="@string/procedure"
                android:textColor="@color/coloraccept2"
                android:textSize="22dp"
                ads:fontFamily="@font/josen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_gravity="center_horizontal"
                android:gravity="fill_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_log"
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:layout_below="@+id/linlay1"
                    android:layout_centerHorizontal="true"
                    android:background="@color/bg_draw"
                    android:fontFamily="sans-serif-medium"
                    android:onClick="login"
                    android:paddingLeft="70dp"
                    android:paddingRight="70dp"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_reg"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_centerHorizontal="false"
                    android:background="@color/bg_blue"
                    android:fadingEdge="horizontal"
                    android:fontFamily="sans-serif-medium"
                    android:onClick="register"
                    android:text="Register"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ads1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="0dp"
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:orientation="vertical">

        <!--        <com.google.android.gms.ads.AdView-->
        <!--            android:id="@+id/adView"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"-->
        <!--            ads:adSize="SMART_BANNER"-->
        <!--            ads:adUnitId="@string/ad_id_banner" />-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ads"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</RelativeLayout>