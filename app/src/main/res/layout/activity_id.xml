<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_small"
    tools:context=".id_activity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/banner_container"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="-114dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:background="@drawable/curve_bg_input"
        android:text="@string/app_name"
        android:textColor="@color/coloraccept2"
        android:textSize="40sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/rev1"
        android:background="@color/transparent">

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="356dp"
            android:layout_height="429dp"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/transparent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:layout_gravity="center_horizontal"
                    android:text="IDENTIFICATION DETAILS"
                    android:textAppearance="@color/coloraccept2"
                    android:textColor="@color/coloraccept2"
                    android:textColorHint="#8FFAF9F9"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    ads:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/registertext"
                    android:textAlignment="center"
                    android:textAppearance="@color/coloraccept2"
                    android:textColor="@color/coloraccept2"
                    android:textColorHint="#8FFAF9F9"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    ads:fontFamily="sans-serif" />

                <LinearLayout
                    android:id="@+id/linlay1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_login"
                    android:layout_marginLeft="@dimen/big_small"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="@dimen/big_small"
                    android:orientation="vertical">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/username_text_input_layout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:textColorHint="@color/coloraccept2">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/curve_bg_input"
                            android:layout_centerVertical="true"
                            android:layout_margin="7dp"
                            android:padding="10dp"
                            android:drawableLeft="@drawable/ic_phone"
                            android:drawablePadding="10dp"
                            android:ems="10"
                            android:fontFamily="@font/josen"
                            android:hint="Mobile Number"
                            android:inputType="number"
                            android:paddingLeft="@dimen/textpadding"
                            android:paddingRight="@dimen/textpadding"
                            android:textColor="@color/coloraccept2"
                            android:textColorHint="#8FFAF9F9"
                            android:textSize="@dimen/textsize" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/username_text_input_layout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@color/transparent"
                        android:textColorHint="@color/coloraccept2">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="7dp"
                            android:drawableLeft="@mipmap/nid"
                            android:drawablePadding="5dp"
                            android:background="@drawable/curve_bg_input"
                            android:ems="10"
                            android:fontFamily="@font/josen"
                            android:hint="National ID"
                            android:inputType="number"
                            android:paddingLeft="@dimen/textpadding"
                            android:paddingRight="@dimen/textpadding"
                            android:textColor="@color/coloraccept2"
                            android:textColorHint="#8FFAF9F9"
                            android:textSize="@dimen/textsize" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/request_loan"
                    android:layout_width="219dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_bg"

                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="PROCEED"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    ads:fontFamily="@font/josen" />
            </LinearLayout>
        </ScrollView>


    </RelativeLayout>
    <LinearLayout xmlns:maxads="http://schemas.applovin.com/android/1.0"
        android:id="@+id/ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"

        ></LinearLayout>
    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
         />

</RelativeLayout>