<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_small">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/coloraccept2"
                android:textSize="50sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:text="Loans For you 24/7"
                android:textColor="@color/coloraccept2"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:paddingBottom="10dp"
                android:text="Do you always earn the same amount?"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="28sp"
                ads:fontFamily="@font/josen" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="68dp">

                <RadioButton
                    android:id="@+id/radioOwn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yes, I always earn the same amount"
                    android:textColor="@color/coloraccept2"
                    ads:fontFamily="@font/josen" />

            </TableRow>

            <RadioButton
                android:id="@+id/radioOwn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="clip_horizontal"
                android:text="No, the amount I earn sometimes changes"
                android:textColor="@color/coloraccept2"
                ads:fontFamily="@font/josen" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Do you have any other source of Income?"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="28sp"
                ads:fontFamily="@font/josen" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <RadioButton
                    android:id="@+id/radioOwn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="40dp"
                    android:text="Yes"
                    android:textColor="@color/coloraccept2"
                    ads:fontFamily="@font/josen" />

            </TableRow>

            <RadioButton
                android:id="@+id/radioOwn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:textColor="@color/colorWhite"
                ads:fontFamily="@font/josen" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button"
                    android:layout_width="193dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/btn_bg"
                    android:onClick="back"
                    android:text="Back"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_bg"
                    android:onClick="next"
                    android:text="Next"
                    android:textColor="@android:color/background_light" />
            </TableRow>
            <LinearLayout xmlns:maxads="http://schemas.applovin.com/android/1.0"
                android:id="@+id/ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"

                ></LinearLayout>
            <com.tapdaq.sdk.TMBannerAdView
                android:id="@+id/adBanner"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
